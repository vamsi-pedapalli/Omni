<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/card_style"
    card_view:cardCornerRadius="2dp">


    <LinearLayout
        style="@style/basic_card_layout"
        android:orientation="vertical">


        <RelativeLayout style="@style/basic_layout">

            <ImageView
                android:id="@+id/location"
                android:layout_width="96dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/divider"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/maps" />

            <TextView
                android:id="@+id/head_address"
                style="@style/header_style"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/divider"
                android:text="@string/address" />

            <TextView
                android:id="@+id/address"
                style="@style/small_text_grey"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/head_address"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/location"
                android:text="Ground floor, pheonix market city, mahadev, whitd ,- 888588" />

            <View
                android:id="@+id/divider"
                style="@style/divider_line"
                android:layout_below="@+id/store_type"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/store_type"
                style="@style/header_style"
                android:layout_centerHorizontal="true"
                android:text="Designer Store" />

            <TextView
                android:id="@+id/textView"
                style="@style/small_text_grey"
                android:layout_alignBaseline="@+id/store_type"
                android:layout_alignBottom="@+id/store_type"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/address"
                android:layout_toRightOf="@+id/address"
                android:gravity="end"
                android:text="@string/go_to_site" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>