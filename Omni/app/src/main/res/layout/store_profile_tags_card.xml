<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/card_style"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        style="@style/basic_card_layout"
        android:orientation="vertical">

        <LinearLayout style="@style/basic_layout">

            <TextView
                style="@style/header_style"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Brands" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"

                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:alignContent="center"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start">


                    <TextView
                        style="@style/tag_Style"
                        android:text="Peter England"
                        app:layout_alignSelf="baseline" />



                </com.google.android.flexbox.FlexboxLayout>


                <TextView
                    android:id="@+id/tex"
                    style="@style/tag_Style"
                    android:visibility="gone"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="0dp"
                    android:background="@android:color/white"
                    android:text="@string/view_all"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/divider_line" />

        <LinearLayout style="@style/basic_layout">

            <TextView
                style="@style/header_style"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Product types" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"

                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:alignContent="center"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    android:layout_marginRight="8dp"
                    app:justifyContent="flex_start">



                    <TextView
                        style="@style/tag_Style"
                        android:text="Apparels"
                        app:layout_alignSelf="baseline" />
                    <TextView
                        style="@style/tag_Style"
                        android:text="Apparels"
                        app:layout_alignSelf="baseline" />

                    <TextView
                        style="@style/tag_Style"
                        android:text="Gucci"
                        app:layout_alignSelf="baseline" />

                    <TextView
                        style="@style/tag_Style"
                        android:text="Gucci"
                        app:layout_alignSelf="baseline" />

                    <TextView
                        style="@style/tag_Style"
                        android:text="Allen Solly"
                        app:layout_alignSelf="baseline" />

                    <TextView
                        style="@style/tag_Style"
                        android:text="Zara"
                        app:layout_alignSelf="baseline" />

                    <TextView
                        style="@style/tag_Style"
                        android:text="Woodland"
                        android:visibility="gone"
                        app:layout_alignSelf="baseline" />
                </com.google.android.flexbox.FlexboxLayout>


                <TextView
                    android:id="@+id/textView2"
                    style="@style/tag_Style"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="0dp"
                    android:background="@android:color/white"
                    android:text="@string/view_all"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>